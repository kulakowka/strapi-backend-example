{
  "identity": "user",
  "connection": "mongodb_main",
  "schema": true,
  "limit": 20,
  "defaultTemplate": "default",
  "displayedAttribute": "username",
  "attributes": {
    "username": {
      "minLength": 3,
      "type": "alpha",
      "unique": true
    },
    "email": {
      "type": "email",
      "minLength": 6,
      "unique": true
    },
    "lang": {
      "type": "string",
      "required": true
    },
    "template": {
      "type": "string",
      "required": true
    },
    "id_ref": {
      "type": "int"
    },
    "provider": {
      "type": "string"
    },
    "password": {
      "type": "string",
      "minLength": 6
    },
    "resetPasswordToken": {
      "type": "string"
    },
    "roles": {
      "collection": "role",
      "via": "users",
      "dominant": true
    },
    "filesCreated": {
      "collection": "comment",
      "via": "createdBy"
    },
    "articles": {
      "collection": "article",
      "via": "contributors"
    },
    "comments": {
      "collection": "comment",
      "via": "contributors"
    }
  },
  "autoCreatedAt": true,
  "autoUpdatedAt": true,
  "migrate": "alter",
  "templates": {
    "default": {
      "attributes": {
        "username": {
          "minLength": 3,
          "type": "alpha",
          "unique": true
        },
        "email": {
          "type": "email",
          "minLength": 6,
          "unique": true
        }
      },
      "displayedAttribute": "username"
    }
  }
}
