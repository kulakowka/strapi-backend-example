{
  "identity": "article",
  "connection": "mongodb_main",
  "defaultTemplate": "default",
  "displayedAttribute": "",
  "schema": true,
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "text"
    },
    "sourceUrl": {
      "type": "string"
    },
    "lang": {
      "type": "string",
      "required": true
    },
    "template": {
      "type": "string",
      "required": true
    },
    "id_ref": {
      "type": "int"
    },
    "createdBy": {
      "model": "user"
    },
    "updatedBy": {
      "model": "user"
    },
    "contributors": {
      "collection": "user",
      "via": "articles"
    },
    "comments": {
      "collection": "comment",
      "via": "article"
    },
    "languages": {
      "collection": "language",
      "via": "articles"
    },
    "platforms": {
      "collection": "platform",
      "via": "articles"
    }
  },
  "autoCreatedAt": true,
  "autoUpdatedAt": true,
  "migrate": "alter",
  "templates": {
    "default": {
      "attributes": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "text"
        },
        "sourceUrl": {
          "type": "string"
        }
      },
      "displayedAttribute": "title"
    }
  }
}
